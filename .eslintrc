{
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": ["react-app", "prettier"],
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "trailingComma": "none",
        "printWidth": 80,
        "tabWidth": 2,
        "jsxSingleQuote": false,
        "singleQuote": true,
        "semi": false,
        "arrowParens": "avoid",
        "endOfLine": "auto"
      }
    ]
  }
}
